<div class="container py-4">
  <p class="text-success text-uppercase small fw-semibold mb-4">Finance AI Assistant</p>
  
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="fw-bold">Welcome, <%= current_user.name %></h1>
      <p class="text-muted mb-0">Manage your monthly finances</p>
    </div>
    <div class="d-flex gap-2">
      <%= link_to "Overview", dashboard_path, class: "btn btn-outline-primary btn-lg" %>
      <%= link_to "New Month", new_month_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>

  <% if @months.any? %>
    <div class="card shadow-sm border-0">
      <ul class="list-group list-group-flush">
        <% @months.each do |month| %>
          <li class="list-group-item d-flex justify-content-between align-items-center py-3">
            <strong><%= month.month %> <%= month.year %></strong>
            <div>
              <%= link_to "View", month_path(month), class: "btn btn-sm btn-outline-primary me-2" %>
              <%= link_to "Delete", month_path(month), 
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                  class: "btn btn-sm btn-outline-danger" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="alert alert-info">
      <strong>No months yet.</strong> Click "New Month" to add your first financial record.
    </div>
  <% end %>
</div>
