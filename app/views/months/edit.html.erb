<div class="container-fluid vh-100">
  <div class="row h-100 align-items-start">

    <!-- Coluna do texto -->
    <div class="col-6 px-5">
      <p class="text-success text-uppercase small fw-semibold mb-4">Finance AI Assistant</p>
      <h1 class="display-4 fw-bold mb-3">
        Update this month <span class="text-success">and refine your strategy.</span>
      </h1>
      <p class="text-muted mb-5">
        Adjust the details for this month. Update income, expenses, or notes
        to keep your financial overview accurate and up to date.
      </p>
      <%= link_to "Back to months", months_path, class: "btn btn-outline-secondary btn-lg" %>
    </div>

    <!-- Coluna do formulÃ¡rio -->
    <div class="col-6 d-flex justify-content-center align-items-start pt-5">
      <div class="card shadow-sm" style="width: 100%; max-width: 500px;">
        <div class="card-body p-4">
          <h4 class="card-title mb-4">Edit Month</h4>

          <%= simple_form_for @month do |f| %>

            <%= f.input :year,
                        input_html: { class: "form-control" } %>

            <%= f.input :month,
                        collection: Date::MONTHNAMES.compact.map { |m| [m, m] },
                        prompt: "Select a month",
                        input_html: { class: "form-select" } %>

            <%= f.input :overview,
                        as: :text,
                        input_html: { rows: 5, class: "form-control" } %>

            <div class="d-grid mt-3">
              <%= f.submit "Update Month", class: "btn btn-success btn-lg" %>
            </div>

          <% end %>

        </div>
      </div>
    </div>

  </div>
</div>
