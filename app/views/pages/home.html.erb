<!-- app/views/pages/home.html.erb -->

<!-- Seção principal -->
<div class="container-fluid vh-100">
  <div class="row h-100 align-items-start">

    <!-- Coluna do texto -->
    <div class="col-6 px-5">
      <p class="text-success text-uppercase small fw-semibold mb-4">Personal Finance Tracker with AI Assistant</p>
      <h1 class="display-4 fw-bold mb-3">
        Know exactly where your money goes <span class="text-success">and what to do about it.</span>
      </h1>
      <p class="text-muted mb-5">
        Track your monthly expenses, log your spending, and talk to an AI assistant
        that helps you save smarter. Clear dashboard. Real insights. Practical advice.
      </p>
      <%= link_to "Create an account", new_user_registration_path, class: "btn btn-success btn-lg me-2" %>
      <%= link_to "Sign in", new_user_session_path, class: "btn btn-outline-secondary btn-lg" %>
    </div>

    <!-- Coluna da imagem -->
    <div class="col-6 d-flex justify-content-center align-items-start pt-5">
      <%= image_tag "hero-illustration.png", alt: "Finance illustration", class: "img-fluid" %>
    </div>

  </div>
</div>
